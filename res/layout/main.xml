<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@drawable/orangecheck">
	<ImageView
		android:background="@drawable/title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"></ImageView>
	<!--<TextView
		android:text="Baby Diary"
		android:layout_gravity="center"
		android:textSize="40dp"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:textStyle="bold"
		android:textColor="#FFFF00" />-->
	<LinearLayout
		android:layout_gravity="center"

		android:layout_width="wrap_content"
		android:layout_height="wrap_content">
		
			 <ImageView
			 	
				android:id="@+id/imgView"
				android:src="@drawable/people"
				android:background="#ffcc00"
				android:layout_width="100dp"
				android:layout_height="100dp"
				 />
			<TextView
				android:id="@+id/txtInfo"
				android:textSize="15dp"
				android:layout_height="90dp"
				android:layout_width="wrap_content"
				android:textColor="#000000" 
				android:gravity="center_vertical"
				android:layout_marginLeft="10dp"
				android:layout_marginRight="10dp"/>

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:gravity="center_vertical">
			<Button
				android:id="@+id/babyInsert"
				android:layout_width="wrap_content"
				android:layout_height="32dp"
				android:background="@drawable/btnbabyadd"
				 />
			<Button
				android:id="@+id/babyModify"
				android:layout_width="wrap_content"
				android:layout_height="32dp"
				android:background="@drawable/btnbabymodify"
				 />
			<Button
				android:id="@+id/babySelete"
				android:layout_width="wrap_content"
				android:layout_height="32dp"
				android:background="@drawable/btnbabyselect"
				 />
		</LinearLayout>

	</LinearLayout>
	<LinearLayout
		android:layout_marginTop="10dp"
		android:layout_gravity="center"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">
		<Button
			android:text="예방접종"
			android:id="@+id/inoculationBtn"
			android:layout_width="120dp"
			android:layout_height="80dp"
			android:textSize="18dp"
			android:paddingBottom="25dp"
			android:background="@drawable/btntrain"/>
		<Button
			android:text="진료기록"
			android:id="@+id/treatmentBtn"
			android:layout_width="120dp"
			android:layout_height="80dp"
			android:textSize="18dp"
			android:paddingBottom="25dp"
			android:background="@drawable/btntrain"/>
	</LinearLayout>
	<LinearLayout
		android:layout_gravity="center"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">
		<Button
			android:text="성장발육"
			android:id="@+id/growBtn"
			android:layout_width="120dp"
			android:layout_height="80dp"
			android:textSize="18dp"
			android:paddingBottom="25dp"
			android:background="@drawable/btntrain"/>
		<Button
			android:text="메모장"
			android:id="@+id/notepadBtn"
			android:layout_width="120dp"
			android:layout_height="80dp"
			android:textSize="18dp"
			android:paddingBottom="25dp"
			android:background="@drawable/btntrain"/>
	</LinearLayout>
	<LinearLayout
		android:layout_gravity="center"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">
		<Button
			android:text="육아가이드"
			android:id="@+id/babyGuideBtn"
			android:layout_width="120dp"
			android:layout_height="80dp"
			android:textSize="18dp"
			android:paddingBottom="25dp"
			android:background="@drawable/btntrain"/>
			<Button
			android:text="다이어리"
			android:id="@+id/diaryViewBtn"
			android:layout_width="120dp"
			android:layout_height="80dp"
			android:textSize="18dp"
			android:paddingBottom="25dp"
			android:background="@drawable/btntrain"/>
			
	</LinearLayout>

</LinearLayout>
